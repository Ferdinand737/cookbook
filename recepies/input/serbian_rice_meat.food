//serbian_rice_meat.food

fn cook() {
    
    // Ingredients
    pork = new Pork("500g")
    oil = new Oil("for frying")
    onions = new Onion("3 medium")
    garlic = new Garlic("1 clove")
    tomato_paste = new TomatoPaste("40g")
    water = new Water("750ml")
    broth_cube = new BrothCube("1")
    thyme = new Thyme("2 tsp, dried")
    paprika = new Paprika("to taste")
    long_grain_rice = new LongGrainRice("150g")
    bell_peppers = new BellPepper("2 medium")
    chili_pepper = new ChiliPepper("1 fresh")
    
    // Equipment
    knife = new Knife()
    pot = new Pot()
    
    // Preparation
    pork = knife.dice(pork, "pieces")
    onions = knife.dice(onions)
    garlic = knife.mince(garlic)
    bell_peppers = knife.dice(bell_peppers)
    chili_pepper = knife.mince(chili_pepper)
    
    // Cooking
    pot.heat("medium-high")
    pot.add(oil)
    pot.add(pork)
    pot.brown("until seared")
    
    pot.add(onions)
    pot.add(garlic)
    pot.saute("until translucent")
    
    pot.add(tomato_paste)
    pot.stir("1 minute")
    
    pot.add(water)
    pot.add(broth_cube)
    pot.add(thyme)
    pot.add(paprika)
    pot.boil()
    
    rinse(long_grain_rice, "until water runs clear")
    pot.add(long_grain_rice)
    pot.add(bell_peppers)
    pot.add(chili_pepper)
    pot.stir()
    
    pot.simmer("20-25 minutes until rice is tender and liquid absorbed")
    
    return "Serbian Rice Meat"
}
