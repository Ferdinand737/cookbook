   60	    saucepan.add(broth)
   61	    saucepan.cook("until smooth")
   62	    saucepan.add(salt)
   63	    saucepan.add(lemon_juice)
   64	    saucepan.add(capers)
   65	    
   66	    // Finish sauce
   67	    saucepan.remove_from_heat()
   68	    saucepan.add(egg_yolks)
   69	    saucepan.stir("to thicken")
   70	    saucepan.add(cognac)
   71	    
   72	    saucepan.add(meatballs)
   73	    
   74	    return "KÃ¶nigsberg Meatballs - serve with potatoes and salad"
   75	}
