    9	    oil = new Oil("2 tbsp")
   10	    
   11	    // Topping ingredients
   12	    sour_cream = new SourCream("2 cups")
   13	    emmental = new Emmental("100g, grated")
   14	    nutmeg = new Nutmeg("to taste")
   15	    pepper = new BlackPepper("to taste")
   16	    onions = new Onion("200g")
   17	    bacon = new SmokedBacon("100g, diced")
   18	    
   19	    // Utensils
   20	    mixing_bowl = new Bowl()
   21	    pan = new Pan()
   22	    rolling_pin = new RollingPin()
   23	    baking_sheet = new BakingSheet()
   24	    oven = new Oven()
