   51	    pan.add(onions)
   52	    pan.saute(onions, "until translucent")
   53	    
   54	    // Assemble
   55	    oven.preheat("230Â°C")
   56	    baking_sheet.grease()
   57	    
   58	    mixing_bowl.knead("again")
   59	    rolling_pin.roll(mixing_bowl, "on baking sheet")
   60	    
   61	    baking_sheet.spread(cream_bowl)
   62	    baking_sheet.distribute(pan)
   63	    
   64	    // Bake
   65	    oven.bake(baking_sheet, "10 minutes")
   66	    
   67	    return "Flammkuchen with Cream"
   68	}
