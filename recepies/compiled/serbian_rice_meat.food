   36	    pot.add(pork)
   37	    pot.brown("until seared")
   38	    
   39	    pot.add(onions)
   40	    pot.add(garlic)
   41	    pot.saute("until translucent")
   42	    
   43	    pot.add(tomato_paste)
   44	    pot.stir("1 minute")
   45	    
   46	    pot.add(water)
   47	    pot.add(broth_cube)
   48	    pot.add(thyme)
   49	    pot.add(paprika)
   50	    pot.boil()
   51	    
   52	    rinse(long_grain_rice, "until water runs clear")
