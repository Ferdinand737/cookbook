    3	// Ingredients
    4	pork = new Pork("500g")
    5	oil = new Oil("for frying")
    6	onions = new Onion("3 medium")
    7	garlic = new Garlic("1 clove")
    8	tomato_paste = new TomatoPaste("40g")
    9	water = new Water("750ml")
   10	broth_cube = new BrothCube("1")
   11	thyme = new Thyme("2 tsp, dried")
   12	paprika = new Paprika("to taste")
   13	long_grain_rice = new LongGrainRice("150g")
   14	bell_peppers = new BellPepper("2 medium")
   15	chili_pepper = new ChiliPepper("1 fresh")
   16	
   17	// Utensils
   18	knife = new Knife()
   19	pot = new Pot()
   20	
   21	fn prepareIngredients() {
   22	    // Preparation
   23	    pork = knife.dice(pork, "pieces")
