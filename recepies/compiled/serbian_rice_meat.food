   54	    pot.add(bell_peppers)
   55	    pot.add(chili_pepper)
   56	    pot.stir()
   57	    
   58	    pot.simmer("20-25 minutes until rice is tender and liquid absorbed")
   59	    
   60	    return "Serbian Rice Meat"
   61	}
