    3	fn cook() {
    4	    // Ingredients
    5	    ground_beef = new GroundBeef("400g")
    6	    onion = new Onion("1 large")
    7	    bacon = new SmokedBacon("100g, streaky")
    8	    cabanassi = new SmokedSausage("150g, cabanassi")
    9	    potatoes = new Potato("500g")
   10	    bouillon_cubes = new BrothCube("2")
   11	    kidney_beans = new KidneyBeans("3 small cans")
   12	    chili_seasoning = new ChiliSeasoning("2 packets")
   13	    garlic = new Garlic("5 cloves")
   14	    red_bell_pepper = new BellPepper("1 red")
   15	    salt = new Salt("to taste")
   16	    oil = new Oil("a little")
   17	    
   18	    // Utensils
   19	    knife = new Knife()
   20	    pan = new Pan()
   21	    pot = new Pot()
   22	    
   23	    // Preparation
   24	    knife.peel(onion)
   25	    knife.chop(onion, "roughly")
   26	    knife.dice(bacon)
   27	    knife.dice(cabanassi)
   28	    
   29	    knife.peel(potatoes)
   30	    knife.cut(potatoes, "small cubes")
   31	    
   32	    knife.peel(garlic)
   33	    knife.crush(garlic)
   34	    
   35	    knife.dice(red_bell_pepper)
   36	    wash(red_bell_pepper)
   37	    
   38	    // Cooking
   39	    pan.heat(oil)
