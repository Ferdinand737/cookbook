   41	    pan.saute(bacon)
   42	    pan.saute(cabanassi)
   43	    
   44	    pan.add(ground_beef)
   45	    pan.brown(ground_beef, "while stirring")
   46	    
   47	    pan.add(potatoes)
   48	    pan.saute(potatoes, "briefly")
   49	    
   50	    transfer(pan, pot)
   51	    pot.add(bouillon_cubes)
   52	    pot.add("water")
   53	    pot.boil()
   54	    pot.cook("until potatoes are done")
   55	    
   56	    pot.add(chili_seasoning)
   57	    pot.add(kidney_beans)
   58	    pot.add(garlic)
   59	    pot.simmer("briefly")
   60	    
   61	    season(pot, salt)
   62	    
   63	    return "Chilli con Carne"
   64	}
