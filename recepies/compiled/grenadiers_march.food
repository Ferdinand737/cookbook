    3	fn cook() {
    4	    
    5	    // Ingredients
    6	    pasta = new Pasta("200g")
    7	    potatoes = new Potato("500g")
    8	    onion = new Onion("1 medium")
    9	    fat = new Fat("100g") // lard or oil
   10	    salt = new Salt("to taste")
   11	    paprika = new Paprika("to taste")
   12	    
   13	    // Equipment
   14	    knife = new Knife()
   15	    pot = new Pot()
   16	    pan = new Pan()
   17	    
   18	    // Preparation
   19	    peel(potatoes)
