   28	    
   29	    pan.heat("medium")
   30	    pan.add(fat)
   31	    pan.add(onion)
   32	    pan.saute("until golden")
   33	    
   34	    pan.add(paprika)
   35	    pan.add(potatoes)
   36	    pan.add(pasta)
   37	    pan.stir("well")
